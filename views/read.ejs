<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <title>All users </title>
</head>
<body>
    <div class="container py-5">
        <div class="nav py-3">
            <a class="btn btn-secondary  " href="/">Go Back </a>
        </div>
        <div class="row">
            <h1>All Users</h1>
        </div>
        <div class="row mt-3">
            <% if (users.length > 0) { %>
                <% users.forEach(function(user){ %>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="card p-2 my-2 shadow border-0">
                            <img src="<%=user.imageUrl%>" class="w-100 h-fix" alt="User Image">
                            <h3><%=user.name%></h3>
                            <h6 class="text-secondary"><%=user.email%></h6>
                            <div class="row pt-3">
                                <div class="d-flex justify-content-between">
                                    <a class="text-start btn text-primary" href="">Edit</a>  
                                    <a class="text-end btn text-danger pe-2" href="/delete/<%=user._id%>">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
                    <p class="alert alert-warning">No users found</p>
                </div>
            <% } %>
        </div>
        
    </div>
</body>
</html>